<div class="container-fluid">
    <div class="row mt-5">

        {{#each products}}

        <div class="col-md-3">
            <div class="card" style="width: 18rem;">
                <img style="width: 160px; height: auto" src="/product_images/{{this._id}}.jpg" class="card-img-top"
                    alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <h5 class="card-title">{{this.category}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text" style="font-weight: bold;">Rs. {{this.price}}</p>
                    {{!-- <a href="/add_to_cart/{{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                    <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                </div>
            </div>
        </div>

        {{/each}}

    </div>
</div>
<div class="container">
    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Title</th>
                <th scope="col">Quantity</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td><img src="/product_images/{{this.product._id}}.jpg" style="width: 70px; height:auto"></td>
                <td>{{this.product.name}}</td>
                <td>
                    <button class="btn btn-primary mr-3"
                        onclick="decreaseProductQuantity('{{this._id}}', '{{this.product._id}}', '{{this.quantity}}')">-</button>
                    {{this.quantity}}
                    <button class="btn btn-primary ml-3"
                        onclick="increaseProductQuantity('{{this._id}}', '{{this.product._id}}', '{{this.quantity}}')">+</button>
                </td>
                <td class="btn btn-danger">Remove</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>

<script>
    function increaseProductQuantity(cartID, prdID, quantity) {
        console.log(cartID, prdID, quantity)
        $.ajax({
            url: '/increase_product_quantity',
            data: {
                cart: cartID,
                product: prdID,
                quantity: quantity
            },
            method: 'post',
            success: (response) => {
                if (response.increaseQuantity) {
                    location.reload()
                } else {
                    alert('Product Removed')
                }
            }
        })
    }

    function decreaseProductQuantity(cartID, prdID, quantity) {
        console.log(cartID, prdID, quantity)
        $.ajax({
            url: '/decrease_product_quantity',
            data: {
                cart: cartID,
                product: prdID,
                quantity: quantity
            },
            method: 'post',
            success: (response) => {
                if (response.decreaseQuantity) {
                    location.reload()
                } else {
                    alert('Product Removed')
                }
            }
        })
    }
</script>
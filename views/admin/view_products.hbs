<div class="container">
    <div class="row mt-3">
        <a href="/admin/add_product" class="btn btn-success ml-auto">Add Product</a>
    </div>
    <table class="table mt-3">
        <thead>
            <tr>
                <th scope="col">Number</th>
                <th scope="col">Category</th>
                <th scope="col">id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>

            {{#each products}}

            <tr>
                <th scope="row">1</th>
                <td>{{this.category}}</td>
                <td>{{this._id}}</td>
                <td><img style="width: 80px; height:auto" src="/public/product_images/{{this._id}}.jpg" alt=""></td>
                <td>{{this.name}}</td>
                <td>{{this.price}}</td>
                <td>{{this.description}}</td>
            </tr>

            {{/each}}

        </tbody>
    </table>
</div>
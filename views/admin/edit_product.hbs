<div class="container">
    <h3>Edit Product</h3>
    <form action="/admin/edit_product" method="post" enctype="multipart/form-data">
    <input type="text" class="form-control" name="id" value="{{product._id}}" style="display: none;">
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" class="form-control" name="name" value="{{product.name}}">
        </div>
        <div class="form-group">
            <label for="">Category</label>
            <input type="text" class="form-control" name="category" value="{{product.category}}">
        </div>
        <div class="form-group">
            <label for="">Price</label>
            <input type="text" class="form-control" name="price" value="{{product.price}}">
        </div>
        <div class="form-group">
            <label for="">Description</label>
            <input type="text" class="form-control" name="description" value="{{product.description}}">
        </div>
        <div class="form-group">
            <img src="/product_images/{{product._id}}.jpg" style="width: 100px; height:auto">
            <label for="">Image</label>
            <input type="file" class="form-control" name="image">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>